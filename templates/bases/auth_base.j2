{% load static %}
{% load widget_tweaks %}

<html lang="en" class="h-100">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>Movielens</title>
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
  <link href="{% static 'css/material-dashboard.css' %}" rel="stylesheet" />
  <link href="{% static 'css/auth.css' %}" rel="stylesheet" />
</head>

<body class="h-100">
  <div class="container h-100">
    <div class="row h-100 justify-content-center">
      <div class="d-flex align-items-center col-lg-6 col-md-8">
        <div class="card">
          <form class="form" method="post">
            {% csrf_token %}
            <div class="card-title h2 text-center my-3">
              {% block title %}{% endblock %} 
            </div>
            <div class="p text-center my-3">
              {% block subtitle %}{% endblock %} 
            </div>
            <div class="card-body mt-2">
              {% for field in form %}
                <div class="form-group label-floating mx-4 py-1 my-4">
                  <label class="control-label">{{ field.label }}:</label>
                  {{ field|add_class:"form-control" }}
                </div>
              {% endfor %}
              <div class="text-center">
                {% block redirect %}{% endblock %} 
              </div>
            </div>
            <div class="card-footer justify-content-center">
              <button type="submit" class="btn btn-submit">
                {% block submit %}{% endblock %}
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!--   Core JS Files   -->
  <script src="{% static 'js/core/jquery.min.js' %}"></script>
  <script src="{% static 'js/core/popper.min.js' %}"></script>
  <script src="{% static 'js/core/bootstrap-material-design.min.js' %}"></script>
  <script src="{% static 'js/plugins/perfect-scrollbar.jquery.min.js' %}"></script>
  <script src="{% static 'js/material-dashboard.js' %}" type="text/javascript"></script>
  {% block script %}{% endblock %}

</body>

</html>

